
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow anyone to read from the 'roadmaps' collection.
    // In a production app, you would restrict this to authenticated users.
    // e.g., match /roadmaps/{roadmapId} { allow read: if request.auth != null; }
    match /roadmaps/{roadmapId} {
      allow read: if true;
      allow write: if false; // Protect against unauthorized writes
    }
  }
}
